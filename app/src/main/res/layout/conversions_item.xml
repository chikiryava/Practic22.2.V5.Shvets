<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/background_gradient">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <TextView
        android:id="@+id/conversion_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textColor="#2B2424"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/conversion_original_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original currency"
        android:textColor="#2B2424"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/conversion_final_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final currency"
        android:textColor="#2B2424"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/conversion_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversion result"
        android:textColor="#2B2424"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/conversion_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amount"
        android:textColor="#2B2424"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/conversion_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#2B2424"
        android:textStyle="bold"
        android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/show_dialog_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2B2424"
        android:text="..."
        android:background="@drawable/button_design"
        android:layout_gravity="end"/>
</LinearLayout>